{
  "name": "uask-ai-qa",
  "version": "1.0.0",
  "description": "AI/ML QA Automation for U-Ask UAE Government Chatbot using Playwright",
  "author": "Puja Singh",
  "license": "MIT",

  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test tests/test_ui_chatbot.spec.ts",
    "test:ai": "playwright test tests/test_ai_responses.spec.ts",
    "test:api": "playwright test tests/test_api.spec.ts",
    "test:security": "playwright test tests/test_security.spec.ts",

    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report",

    "ci:test": "playwright test",
    "ci:report": "allure generate ./allure-results --clean -o ./allure-report"
  },

  "dependencies": {
    "@playwright/test": "^1.41.0"
  },

  "devDependencies": {
    "allure-playwright": "^2.15.1",
    "allure-commandline": "^2.29.0",
    "typescript": "^5.3.3",
    "dotenv": "^16.4.1"
  }
}
